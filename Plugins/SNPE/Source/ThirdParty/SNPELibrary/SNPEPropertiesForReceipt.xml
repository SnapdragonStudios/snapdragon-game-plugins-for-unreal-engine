<?xml version="1.0" encoding="utf-8"?>
<root xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Manifest addition for uses-native-library (newer Android versions) -->
	<androidManifestUpdates>
		<log text="Adding native library access clause(s) as needed by newer Android API versions"/>

		<addElements tag="application">
			<!-- This lib is necessary as SNPE accesses it for DSP runtime support -->
			<uses-native-library android:name="libcdsprpc.so" android:required="false"/>
		</addElements>

	</androidManifestUpdates>

	<!-- Copy the SNPE AAR that houses all needed libs -->
	<resourceCopies>
		<log text="Copying SNPE AAR..."/>
		<copyFile src="$S(AbsPluginDir)/lib/android/snpe-release.aar"
					dst="$S(BuildDir)/libs/$S(Architecture)/snpe-release.aar" />
	</resourceCopies>

	<!-- Add the SNPE AAR as a file-dependency to extract all required libs -->
	<buildGradleAdditions>
		<insertValue value="dependencies.implementation files ('$S(BuildDir)/libs/$S(Architecture)/snpe-release.aar')"/>
	</buildGradleAdditions>
	
</root>
